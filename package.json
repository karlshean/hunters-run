{
  "name": "hunters-run",
  "version": "0.1.0",
  "private": true,
  "description": "Hunters Run monorepo (apps + packages)",
  "engines": {
    "node": "22.18.0",
    "npm": ">=10.0.0"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "postinstall": "npm -ws run postinstall --if-present && husky",
    "build": "npm -ws run build --if-present",
    "dev:hr": "npm --workspace @apps/hr-api run start:dev",
    "lint": "npm -ws run lint --if-present",
    "test": "npm -ws run test --if-present",
    "format": "prettier --write \"**/*.{js,ts,json,md,yaml,yml}\"",
    "format:check": "prettier --check \"**/*.{js,ts,json,md,yaml,yml}\"",
    "prepare": "husky"
  },
  "devDependencies": {
    "husky": "^9.0.0",
    "lint-staged": "^15.2.0",
    "prettier": "^3.1.0",
    "eslint": "^8.57.1",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0"
  }
}