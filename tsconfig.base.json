{
  "compilerOptions": {
    "target": "ES2021",
    "module": "CommonJS",
    "lib": ["ES2021"],
    "declaration": true,
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@platform/shared/*": ["packages/shared/src/*"],
      "@platform/auth/*": ["packages/auth/src/*"],
      "@platform/db/*": ["packages/db/src/*"],
      "@hunters-run/integrations/*": ["packages/integrations/src/*"]
    }
  }
}