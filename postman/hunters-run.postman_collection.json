		{
			"name": "Work Orders",
			"item": [
				{
					"name": "Create Work Order",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "x-org-id",
								"value": "{{org_id}}",
								"type": "text"
							},
							{
								"key": "Content-Type",
								"value": "application/json",
								"type": "text"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"unitId\": \"20000000-0000-0000-0000-000000000001\",\n  \"tenantId\": \"30000000-0000-0000-0000-000000000001\",\n  \"title\": \"Leaking kitchen faucet\",\n  \"description\": \"Water dripping from kitchen faucet\",\n  \"priority\": \"high\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/api/maintenance/work-orders",
							"host": ["{{base_url}}"],
							"path": ["api", "maintenance", "work-orders"]
						}
					}
				},
				{
					"name": "Get Work Order",
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "x-org-id",
								"value": "{{org_id}}",
								"type": "text"
							}
						],
						"url": {
							"raw": "{{base_url}}/api/maintenance/work-orders/:id",
							"host": ["{{base_url}}"],
							"path": ["api", "maintenance", "work-orders", ":id"],
							"variable": [
								{
									"key": "id",
									"value": "{{work_order_id}}"
								}
							]
						}
					}
				},
				{
					"name": "Change Status to Triaged",
					"request": {
						"method": "PATCH",
						"header": [
							{
								"key": "x-org-id",
								"value": "{{org_id}}",
								"type": "text"
							},
							{
								"key": "Content-Type",
								"value": "application/json",
								"type": "text"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"toStatus\": \"triaged\",\n  \"note\": \"Work order reviewed and triaged\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/api/maintenance/work-orders/:id/status",
							"host": ["{{base_url}}"],
							"path": ["api", "maintenance", "work-orders", ":id", "status"],
							"variable": [
								{
									"key": "id",
									"value": "{{work_order_id}}"
								}
							]
						}
					}
				},
				{
					"name": "Change Status to Assigned",
					"request": {
						"method": "PATCH",
						"header": [
							{
								"key": "x-org-id",
								"value": "{{org_id}}",
								"type": "text"
							},
							{
								"key": "Content-Type",
								"value": "application/json",
								"type": "text"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"toStatus\": \"assigned\",\n  \"note\": \"Assigned to technician\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/api/maintenance/work-orders/:id/status",
							"host": ["{{base_url}}"],
							"path": ["api", "maintenance", "work-orders", ":id", "status"],
							"variable": [
								{
									"key": "id",
									"value": "{{work_order_id}}"
								}
							]
						}
					}
				},
				{
					"name": "Change Status to In Progress",
					"request": {
						"method": "PATCH",
						"header": [
							{
								"key": "x-org-id",
								"value": "{{org_id}}",
								"type": "text"
							},
							{
								"key": "Content-Type",
								"value": "application/json",
								"type": "text"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"toStatus\": \"in_progress\",\n  \"note\": \"Work started\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/api/maintenance/work-orders/:id/status",
							"host": ["{{base_url}}"],
							"path": ["api", "maintenance", "work-orders", ":id", "status"],
							"variable": [
								{
									"key": "id",
									"value": "{{work_order_id}}"
								}
							]
						}
					}
				},
