					"name": "Health Check",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{base_url}}/api/health",
							"host": ["{{base_url}}"],
							"path": ["api", "health"]
						}
					}
				},
				{
					"name": "Ready Check",
					"request": {
						"method": "GET", 
						"header": [],
